@model MunicipalManagementSystem.Models.ServiceRequest

@{
    ViewData["Title"] = "Edit Service Request";
    Layout = "_Layout";

}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Edit">
        <input type="hidden" asp-for="RequestID" />

        <div class="mb-3">
            <label asp-for="CitizenID" class="form-label">Citizen ID</label>
            <input asp-for="CitizenID" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="ServiceType" class="form-label">Service Type</label>
            <input asp-for="ServiceType" class="form-control" />
            <span asp-validation-for="ServiceType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option value="Pending">Pending</option>
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
            </select>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}