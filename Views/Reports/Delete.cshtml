@model Report
@{
    ViewData["Title"] = "Delete Report";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Report</h2>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this report?</h3>

            <dl class="row mt-4">
                <dt class="col-sm-3">Report ID</dt>
                <dd class="col-sm-9">@Model.ReportID</dd>

                <dt class="col-sm-3">Report Type</dt>
                <dd class="col-sm-9">@Model.ReportType</dd>

                <dt class="col-sm-3">Citizen</dt>
                <dd class="col-sm-9">@Model.Citizen?.FullName</dd>

                <dt class="col-sm-3">Submission Date</dt>
                <dd class="col-sm-9">@Model.SubmissionDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <!-- Fixed Form -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ReportID" />
                @Html.AntiForgeryToken()

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>