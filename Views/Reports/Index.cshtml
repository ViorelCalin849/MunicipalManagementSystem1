@model IEnumerable<Report>
@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

<h1>Reports</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Report</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Report ID</th>
            <th>Report Type</th>
            <th>Citizen</th>
            <th>Submission Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReportID</td>
                <td>@item.ReportType</td>
                <td>@item.Citizen?.FullName</td>
                <td>@item.SubmissionDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReportID" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ReportID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ReportID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>