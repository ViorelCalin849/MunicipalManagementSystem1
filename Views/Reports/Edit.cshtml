@model Report
@{
    ViewData["Title"] = "Edit Report";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Report</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReportID" />
                <input type="hidden" asp-for="SubmissionDate" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ReportType" class="form-label fw-bold"></label>
                            <input asp-for="ReportType" class="form-control" />
                            <span asp-validation-for="ReportType" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CitizenID" class="form-label fw-bold"></label>
                            <select asp-for="CitizenID" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Citizens, "CitizenID", "FullName"))">
                                <option value="">-- Select Citizen --</option>
                            </select>
                            <span asp-validation-for="CitizenID" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Details" class="form-label fw-bold"></label>
                            <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label fw-bold"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="Under Review">Under Review</option>
                                <option value="Investigation Ongoing">Investigation Ongoing</option>
                                <option value="Resolved">Resolved</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}