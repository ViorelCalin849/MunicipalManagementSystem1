@model IEnumerable<Staff>
@{
    ViewData["Title"] = "Staff Members";
    Layout = "_Layout";
    <!-- This line was added -->
}

<h1>Staff Members</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Staff</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FullName)</th>
            <th>@Html.DisplayNameFor(m => m.Position)</th>
            <th>@Html.DisplayNameFor(m => m.Department)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.Department</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StaffID" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.StaffID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.StaffID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>